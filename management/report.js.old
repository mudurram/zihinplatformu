async function loadTeacherComment(ogrId) {
  try {
    const ref = doc(db, "profiles", ogrId);
    const snap = await getDoc(ref);

    if (snap.exists()) {
      yorumEl.value = snap.data().ogretmenYorum || "";
    }
  } catch (err) {
    console.error("Yorum okunamadÄ±:", err);
  }
}

// ========================================================================
// ğŸ“Œ 5) Ã–ÄŸretmen Yorumu Kaydet
