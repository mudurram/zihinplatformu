yorumBtn.addEventListener("click", async () => {
  try {
    const ref = doc(db, "profiles", ogrId);
    await updateDoc(ref, { ogretmenYorum: yorumEl.value });

    alert("Yorum kaydedildi!");

  } catch (err) {
    // EÄŸer doc yoksa create edelim
    try {
      await setDoc(doc(db, "profiles", ogrId), {
        ogretmenYorum: yorumEl.value
      });
      alert("Yorum oluÅŸturulup kaydedildi.");
    } catch (e) {
      console.error("Yorum kaydedilemedi:", e);
    }
  }
});