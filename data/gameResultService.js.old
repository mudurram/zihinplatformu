export async function saveGameResult(sonuc) {
  try {
    const user = auth.currentUser;

    if (!user) {
      console.error("âŒ KullanÄ±cÄ± giriÅŸ yapmamÄ±ÅŸ â†’ sonuÃ§ kaydedilemez.");
      return false;
    }

    // KullanÄ±cÄ±nÄ±n rolÃ¼
    const role = localStorage.getItem("role");
    const aktifOgrenciId = localStorage.getItem("aktifOgrenciId");

    let hedefRef = null;

    // =========================================================
    // ğŸŸ© Ã–ÄŸrenci â†’ kendi profilinin altÄ±na yazar
    // =========================================================
    if (role === ROLES.OGRENCI) {
      hedefRef = collection(
        db,
        GLOBAL.FIRESTORE.PROFILES,
        user.uid,
        GLOBAL.FIRESTORE.RESULTS
      );
    }

    // =========================================================
    // ğŸŸ¦ Ã–ÄŸretmen â†’ seÃ§ili Ã¶ÄŸrencinin altÄ±na yazar
    // =========================================================
    else if (role === ROLES.OGRETMEN) {
      if (!aktifOgrenciId) {
        console.warn("âš  Ã–ÄŸretmen Ã¶ÄŸrencisiz sonuÃ§ kaydedemez.");
        return false;
      }

      hedefRef = collection(
        db,
        GLOBAL.FIRESTORE.PROFILES,
        user.uid,
        GLOBAL.FIRESTORE.OGRENCILER,
        aktifOgrenciId,
        GLOBAL.FIRESTORE.RESULTS
      );
    }

    // =========================================================
    // ğŸŸ¥ Admin / Editor â†’ kayÄ±t yetkisi yok
    // =========================================================
    else {
      console.warn("â›” Admin veya Editor oyun sonucu kaydedemez.");
      return false;
    }


    // =========================================================
    // ğŸ”¥ Firestore'a Ekle
    // =========================================================
    const data = {
      ...sonuc,
      uid: user.uid,
      kaydedildi: serverTimestamp()
    };

    await addDoc(hedefRef, data);

    console.log("ğŸ‰ Oyun sonucu Firestore'a kaydedildi:", sonuc.oyun);
    return true;

  } catch (err) {
    console.error("âŒ Firestore kayÄ±t hatasÄ±:", err);
    return false;
  }
}