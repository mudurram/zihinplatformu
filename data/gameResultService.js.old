import { db, auth } from "../data/firebaseConfig.js";
import { GLOBAL, ROLES } from "../platform/globalConfig.js";

import {
  collection,
  addDoc,
  serverTimestamp
} from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

